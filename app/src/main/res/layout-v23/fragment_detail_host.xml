<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F7F7">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:clickable="true"
                  android:focusable="true"
                  android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_bar_host_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blule"
                app:titleTextColor="@color/white">

            <TextView
                    android:id="@+id/txt_tool_bar_host_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_14_dp"
                    android:gravity="center"
                    android:text="CHI TIẾT THUÊ NHÀ"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4_dp"
                android:elevation="50dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp"
                app:cornerRadius="@dimen/padding_24dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/padding_24dp">

                <TextView
                        android:id="@+id/txt_tong_tin_khach_hang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/size_4_dp"
                        android:text="@string/text_thong_tin_khach_hang"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                <ImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_below="@id/txt_tong_tin_khach_hang"
                        android:layout_marginStart="@dimen/padding_24dp"
                        android:layout_marginTop="@dimen/padding_16dp"
                        android:src="@drawable/mau"/>

                <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_tong_tin_khach_hang"
                        android:layout_marginStart="@dimen/padding_16dp"
                        android:layout_marginTop="@dimen/padding_16dp"
                        android:layout_toEndOf="@id/img_avatar"
                        android:text="name"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_name"
                        android:layout_marginStart="@dimen/padding_16dp"
                        android:layout_toEndOf="@id/img_avatar"
                        android:text="name"/>

                <TextView
                        android:id="@+id/btn_call_trip_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_address"
                        android:layout_marginStart="@dimen/padding_16dp"
                        android:layout_marginTop="@dimen/padding_16dp"
                        android:layout_toEndOf="@id/img_avatar"
                        android:background="@drawable/shape_btn_wating"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="4dp"
                        android:paddingStart="@dimen/padding_24dp"
                        android:paddingEnd="@dimen/padding_24dp"
                        android:text="@string/btn_goi_dien"
                        android:textAllCaps="false"
                        android:textColor="#fff"/>

                <TextView
                        android:id="@+id/btn_message_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_address"
                        android:layout_marginStart="@dimen/padding_16dp"
                        android:layout_marginTop="@dimen/padding_16dp"
                        android:layout_toEndOf="@id/btn_call_trip_detail"
                        android:background="@drawable/shape_btn_finish"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="4dp"
                        android:paddingStart="@dimen/padding_24dp"
                        android:paddingEnd="@dimen/padding_24dp"
                        android:text="@string/btn_tin_nhan"
                        android:textAllCaps="false"
                        android:textColor="#fff"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4_dp"
                android:elevation="50dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp"
                app:cornerRadius="@dimen/padding_24dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/padding_24dp">

                <TextView
                        android:id="@+id/txt_thong_tin_chuyen_di"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/size_4_dp"
                        android:text="@string/txt_thong_tin_chuyen_di"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                <LinearLayout
                        android:id="@+id/layout_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_thong_tin_chuyen_di"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/txt_bat_dau"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@string/text_bat_dau"
                                android:textColor="@color/black"/>

                        <TextView
                                android:id="@+id/txt_start_day"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="@dimen/size_4_dp"
                                android:layout_marginEnd="64dp"
                                android:background="@drawable/txt_display_new_trip"
                                android:gravity="center"
                                android:paddingStart="@dimen/padding_16dp"
                                android:paddingTop="2dp"
                                android:paddingEnd="@dimen/padding_16dp"
                                android:paddingBottom="2dp"
                                android:text="211212121"
                                android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/txt_ket_thuc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Kết thúc"
                                android:textColor="@color/black"/>

                        <TextView
                                android:id="@+id/txt_day_end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="@dimen/size_4_dp"
                                android:layout_marginEnd="64dp"
                                android:background="@drawable/txt_display_new_trip"
                                android:gravity="center"
                                android:paddingStart="@dimen/padding_16dp"
                                android:paddingTop="2dp"
                                android:paddingEnd="@dimen/padding_16dp"
                                android:paddingBottom="2dp"
                                android:text="211212121"
                                android:textColor="@color/black"/>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                        android:id="@+id/view_people"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/layout_time"
                        android:layout_marginStart="@dimen/size_10_dp"
                        android:layout_marginTop="@dimen/size_10_dp"
                        android:drawableStart="@drawable/ic_user"
                        android:text="Người lớn : "/>

                <TextView
                        android:id="@+id/txt_people"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/layout_time"
                        android:layout_marginStart="@dimen/size_10_dp"
                        android:layout_marginTop="@dimen/size_10_dp"
                        android:layout_toEndOf="@+id/view_people"
                        android:text="2"/>

                <TextView
                        android:id="@+id/view_baby"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/view_people"
                        android:layout_marginStart="@dimen/size_10_dp"
                        android:layout_marginTop="@dimen/size_10_dp"
                        android:drawableStart="@drawable/ic_user"
                        android:text="Trẻ em : "/>

                <TextView
                        android:id="@+id/txt_baby"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/view_people"
                        android:layout_marginStart="@dimen/size_10_dp"
                        android:layout_marginTop="@dimen/size_10_dp"
                        android:layout_toEndOf="@+id/view_people"
                        android:text="2"/>

                <TextView
                        android:id="@+id/view_room"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/view_baby"
                        android:layout_marginStart="@dimen/size_10_dp"
                        android:layout_marginTop="@dimen/size_10_dp"
                        android:drawableStart="@drawable/ic_user"
                        android:text="Phòng : "/>


                <TextView
                        android:id="@+id/txt_room"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/view_baby"
                        android:layout_marginStart="@dimen/size_10_dp"
                        android:layout_marginTop="@dimen/size_10_dp"
                        android:layout_toEndOf="@+id/view_people"
                        android:text="2"/>


                <RelativeLayout
                        android:id="@+id/layout_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_room"
                        android:layout_marginTop="@dimen/size_10_dp"/>

                <TextView
                        android:id="@+id/view_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/id_service"
                        android:layout_marginStart="@dimen/size_10_dp"
                        android:text="Tình trạng thanh toán"
                        android:textAllCaps="true"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/txt_payment_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_state"
                        android:layout_margin="@dimen/padding_16dp"
                        android:background="@drawable/shape_buttom_blue"
                        android:padding="@dimen/size_10_dp"
                        android:text="ddddddđ"
                        android:textColor="@color/white"/>


                <RelativeLayout
                        android:id="@+id/id_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_room"
                        android:layout_marginStart="@dimen/size_10_dp">

                    <TextView
                            android:id="@+id/view_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dịch vụ thêm"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_service">


                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>