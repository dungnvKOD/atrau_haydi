<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" android:orientation="vertical"
>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgMyAvatarLeft"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_sent"/>

        <TextView
                android:textSize="13sp"
                android:id="@+id/txtItemMessageLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/message_left"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/imgMyAvatarLeft"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:text="A"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />
        <TextView
                android:layout_marginTop="12dp"
                android:text="1111111"
                android:id="@+id/txtTimeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgMyAvatarLeft"
                android:layout_alignEnd="@id/txtItemMessageLeft"
                android:layout_marginEnd="8dp"
                android:textSize="10sp"/>

    </RelativeLayout>

