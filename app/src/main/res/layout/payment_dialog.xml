<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/padding_16dp"
                android:background="@color/white"
                android:orientation="vertical">

    <TextView
            android:id="@+id/rateHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Rút tiền"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="20sp"/>

    <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rateHeader"
            android:layout_marginTop="5dp"
            android:background="@color/green"/>

    <TextView
            android:layout_marginTop="@dimen/padding_16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/padding_24dp"
            android:gravity="center"
            android:layout_below="@+id/separator"
            android:id="@+id/txt_sum_many"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText
            android:padding="12dp"
            android:background="@drawable/shape_input_text"
            android:inputType="number"
            android:gravity="center"
            android:layout_margin="@dimen/padding_16dp"
            android:id="@+id/edt_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_sum_many"
            android:layout_marginStart="46dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="@dimen/padding_16dp"/>

    <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_payment"
            android:layout_gravity="center"
            android:weightSum="2">

        <Button
                android:id="@+id/btn_cancel_many"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_red"
                android:text="Hủy"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"/>

        <Button
                android:id="@+id/btn_many"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16dp"
                android:layout_marginEnd="@dimen/padding_16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_wating"
                android:text="Đồng ý"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"/>

    </LinearLayout>


</RelativeLayout>