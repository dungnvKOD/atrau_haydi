<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/size_10_dp"
            android:layout_marginBottom="@dimen/size_10_dp"
            android:id="@+id/img_avatar_friends"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/size_4_dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            app:civ_border_width="0dp"/>

    <TextView
            android:layout_centerVertical="true"
            android:id="@+id/txt_name_friends"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/size_4_dp"
            android:layout_toEndOf="@id/img_avatar_friends"
            android:text="dung12"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <View
            android:layout_toEndOf="@id/img_avatar_friends"
            android:background="@drawable/shape_line"
            android:layout_below="@id/img_avatar_friends"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

