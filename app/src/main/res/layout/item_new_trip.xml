<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:padding="@dimen/size_4_dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_user"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_16dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txt_name_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Du lich a trau"
                    android:textColor="@color/black"
                    android:textSize="@dimen/padding_16dp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/txt_time_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/padding_16dp"
                    android:textStyle="normal"/>

            <TextView
                    android:id="@+id/txt_time_day_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4_dp"
                    android:text="11/12"
                    android:textColor="@color/brown"
                    android:textSize="12sp"/>

        </LinearLayout>

        <Button
                android:textAllCaps="false"
                android:id="@+id/btn_buttom_new_trip"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:paddingStart="@dimen/size_10_dp"
                android:paddingEnd="@dimen/size_10_dp"
                android:text="0k"
                android:textColor="#fff"
                android:textSize="12sp"/>

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@drawable/shape_line"/>


</LinearLayout>