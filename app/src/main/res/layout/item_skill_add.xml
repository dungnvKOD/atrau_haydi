<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/size_4_dp">

    <TextView

        android:id="@+id/txt_name_skill_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/padding_16dp"
        android:layout_weight="2"
        android:background="@drawable/shape_input_text"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/size_4_dp"
        android:paddingTop="@dimen/padding_16dp"
        android:paddingBottom="@dimen/padding_16dp"
        android:text="An choi"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingsBar"
        style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_input_text"
        android:numStars="5"
        android:rating="2"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:theme="@style/RatingBar" /> <!-- Số lượng ngôi sao là 7 -->

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_delete_black_24dp" />

</LinearLayout>