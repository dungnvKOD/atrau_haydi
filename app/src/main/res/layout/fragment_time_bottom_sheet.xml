<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/padding_16dp"
              tools:context=".view.newtrip.TimeBottomSheetFragment">
    <TextView
            android:textSize="@dimen/padding_16dp"
            android:textColor="@color/black"
            android:text="Từ"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:paddingEnd="@dimen/padding_16dp"
            android:gravity="center"
            android:id="@+id/txt_from"
            android:drawableStart="@drawable/ic_school_calendar"
            android:layout_marginTop="@dimen/padding_16dp"
            android:padding="@dimen/size_10_dp"
            android:background="@drawable/shape_input_text"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="@dimen/padding_16dp"
            android:textSize="@dimen/padding_16dp"
            android:textColor="@color/black"
            android:text="Đến"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:paddingEnd="@dimen/padding_16dp"
            android:gravity="center"
            android:id="@+id/txt_to"
            android:drawableStart="@drawable/ic_school_calendar"
            android:layout_marginTop="@dimen/padding_16dp"
            android:padding="@dimen/size_10_dp"
            android:background="@drawable/shape_input_text"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_marginTop="@dimen/padding_16dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:textAllCaps="false"
                android:background="@drawable/shape_input_text"
                android:id="@+id/btn_skip"
                android:text="Bỏ qua"
                android:layout_toLeftOf="@id/btn_apply"
                android:layout_width="130dp" android:layout_height="wrap_content"/>
        <Button
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_btn_wating"
                android:layout_marginStart="@dimen/padding_16dp"
                android:id="@+id/btn_apply"
                android:text="Chấp nhận"
                android:layout_width="130dp" android:layout_height="wrap_content"/>

    </RelativeLayout>


</LinearLayout>